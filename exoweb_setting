# vim: set ft=muttrc
##########################################################
###   Exoweb mail SETTING
##########################################################

# set up my mailboxes
# folder for mailboxes, later '+' or '=' will be expanded to the value 
# of this variable
set folder = $HOME/Mail

set spoolfile = +vincent
set postponed = +postponed
set record = +sent-mail
set mbox = +mbox

source ~/.mutt/mailboxes                  # Define the list of folders that receive mail.

