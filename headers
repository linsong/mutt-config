# vim: set ft=muttrc
#
# Configure header displays.
#

# Ignore all headers
ignore header *

# Then un-ignore the ones I want to see
unignore From:
unignore To:
unignore Subject:
unignore Date:
unignore CC:
#unignore Reply-To:
#unignore Mail-Followup-To:
#unignore Organization:
#unignore Newsgroups:
#unignore BCC:
#unignore Message-ID:
#unignore X-Mailer:
#unignore User-Agent:
#unignore X-Junked-Because:
#unignore X-SpamProbe:
#unignore X-Virus-hagbard:

# specify what order headers should appear in, use the hdr_order directive: 
hdr_order To: From: Subject: Date: CC:
