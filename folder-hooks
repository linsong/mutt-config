# vim: set ft=muttrc
#
# Fine tune mutt depending on which folder I'm viewing.
#

folder-hook .                              source ~/.mutt/defaults
folder-hook =maillists/.*$                 source ~/.mutt/defaults.maillist
folder-hook =exoweb/work$                  source ~/.mutt/defaults.exoweb
folder-hook imaps://imap.exoweb.net/INBOX  source ~/.mutt/defaults.exoweb
folder-hook imaps://imap.gmail.com:993/.* source ~/.mutt/defaults.gmail

